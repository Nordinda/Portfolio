---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<article class="relative">
  <div class="mx-auto justify-center py-2 max-w-3xl">
    

    {/* Bio */}
    <div class="[&>p]:mb-4 [&>p]:text-gray-400 [&>p]:leading-relaxed [&>p]:text-lg [&>p>strong]:text-white [&>p>strong]:font-semibold [&>p>a]:text-white [&>p>a]:border-b [&>p>a]:border-white/20 [&>p>a]:hover:border-white/60 [&>p>a]:transition-colors [&>p>a]:duration-200 text-pretty" set:html={t('about.bio')} />

    {/* Technologies */}
    <div class="mt-8 pt-6 border-t border-white/20">
      <!-- <p class="text-sm text-gray-500 text-center mb-3 font-mono">Technologies I work with</p>
      <div class="flex flex-wrap justify-center gap-3">
        {["Java", "Spring", "PostgreSQL", "JavaScript", "Vue", "Python"].map((tech) => (
          <span class="text-sm text-gray-400 font-mono px-3 py-1.5 rounded border border-white/10 hover:border-white/20 hover:text-gray-300 transition-all duration-200 cursor-default">{tech}</span>
        ))}
      </div> -->
    </div>

    {/* Status */}
    <div class="mt-8 flex items-center gap-2 text-sm text-gray-500">
      <div class="size-2 rounded-full bg-green-500 animate-pulse"></div>
      <span>{t("about.notice")}</span>
    </div>
  </div>
</article>

